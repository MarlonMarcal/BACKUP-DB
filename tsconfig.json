{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "target": "es2020",
    "types": ["node"],
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "*": [
        "src/types/*"
      ]
    }
  }
}